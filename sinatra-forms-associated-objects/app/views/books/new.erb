<h1>Create Book</h1>

<form class="create-book-form" action="/books" method="post">
  <label for="book-title">Title:</label>
  <input type="text" id="book-title" name="book[title]" placeholder="e.g. The New Book">
  <label for="book-snippet">Snippet:</label>
  <input type="text" id="book-snippet" name="book[snippet]" placeholder="e.g. This is a description">
  <label for="book-author-id">Author:</label>
  <select id="book-author-id" name="book[author_id]">
    <% @authors.each do |author| %>
      <option value="<%= author.id %>">
        <%= author.name %>
      </option>
    <% end %>
  </select>
  <input type="submit" value="Create">
</form>
